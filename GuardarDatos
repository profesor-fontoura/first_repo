<body>
    <div class="form-container">
        <h1>Registro de Datos</h1>
        <form id="dataForm">
            <div class="form-group">
                <label for="nombre">Nombre completo:</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>
            <div class="form-group">
                <label for="documento">Número de documento:</label>
                <input type="text" id="documento" name="documento" required>
            </div>
            <button type="button" id="guardarBtn">Guardar datos</button>
        </form>
        <div id="status"></div>
    </div>

    <script>
        document.getElementById('guardarBtn').addEventListener('click', function() {
            const nombre = document.getElementById('nombre').value.trim();
            const documento = document.getElementById('documento').value.trim();
            const statusDiv = document.getElementById('status');
            
            // Validar que los campos no estén vacíos
            if (!nombre || !documento) {
                statusDiv.textContent = 'Por favor complete todos los campos';
                statusDiv.className = 'error';
                return;
            }
            
            // Confirmar con el usuario
            const confirmacion = confirm(`¿Confirma que desea guardar estos datos?\n\nNombre: ${nombre}\nDocumento: ${documento}`);
            
            if (confirmacion) {
                guardarEnGoogleSheets(nombre, documento);
            }
        });
        
        function guardarEnGoogleSheets(nombre, documento) {
            const statusDiv = document.getElementById('status');
            statusDiv.textContent = 'Guardando datos...';
            statusDiv.className = '';
            
            // ID de tu hoja de Google Sheets
            const spreadsheetId = '1uRXN8HCA1rm4Xtxa0us3advsoSzxQlIPwCw8x9Wq6gI';
            
            // URL del web app script (deberás crear uno)
            // Reemplaza esto con la URL de tu propio script de Apps Script
            const scriptUrl = 'TU_URL_DE_APPS_SCRIPT_AQUI';
            
            // Si no tienes el script configurado, mostramos un mensaje
            if (scriptUrl === 'TU_URL_DE_APPS_SCRIPT_AQUI') {
                statusDiv.textContent = 'Error: Falta configurar la URL del script de Google Apps Script.';
                statusDiv.className = 'error';
                alert('Para que este formulario funcione, necesitas:\n\n1. Crear un script de Google Apps Script\n2. Desplegarlo como una aplicación web\n3. Reemplazar la URL en el código HTML');
                return;
            }
            
            // Enviar datos al script
            fetch(scriptUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    spreadsheetId: spreadsheetId,
                    nombre: nombre,
                    documento: documento
                }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    statusDiv.textContent = 'Datos guardados correctamente!';
                    statusDiv.className = 'success';
                    document.getElementById('dataForm').reset();
                } else {
                    statusDiv.textContent = 'Error al guardar: ' + data.message;
                    statusDiv.className = 'error';
                }
            })
            .catch(error => {
                statusDiv.textContent = 'Error de conexión: ' + error.message;
                statusDiv.className = 'error';
            });
        }
    </script>
</body>
</html>
